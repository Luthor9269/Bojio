<%- include('./header'); -%>

<!-- This is the create group form -->
    <form action="/createGroup" method="POST">
      <div class="container">
        <div class="col-md-6 mx-auto text-center">
          <div class="header-title">
            <h1 class="wv-heading--title">Create an iterest group right now!</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 mx-auto">
            <div class="myform form">
              <form action="/createGroup" method="post" name="createGroup">
                <div class="form-group">
                  <input
                    type="text"
                    name="name"
                    class="form-control my-input"
                    id="name"
                    placeholder="Group Name"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    class="form-control my-input"
                    id="email"
                    placeholder="Creator's Email"
                  />
                </div>
                <div class="form-group">
                  <textarea
                    type="textarea"
                    name="introduction"
                    id="introduction"
                    class="form-control my-input"
                  >Introduction</textarea>
                </div>
                <div class="text-center">
                  <button
                    type="submit"
                    class="btn btn-block send-button tx-tfm btn-dark"
                  >
                    Create Account
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </form>

<%- include('./footer'); -%>